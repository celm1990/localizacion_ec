<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_account_sri_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sri</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="S.R.I."
                         data-key="l10n_ec_niif" groups="account.group_account_manager">
                    <h2>Invoice</h2>
                    <div class="col-12 col-lg-6 o_setting_box" id="sri_invoice">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Final Consumer</span>
                            <div class="text-muted">
                                Limit for billing in sales for final consumer, total amount
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Limit Amount" for="l10n_ec_consumidor_final_limit" class="col-lg-3 o_light_label"/>
                                    <field name="l10n_ec_consumidor_final_limit" class="text-center oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Withhold</h2>
                    <div class="col-12 col-lg-6 o_setting_box" id="sri_withhold">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Withhold Sales</span>
                            <div class="text-muted">
                                Accounting config for withhold on sales
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="IVA Account" for="l10n_ec_withhold_sale_iva_account_id" class="col-lg-3 o_light_label"/>
                                    <field name="l10n_ec_withhold_sale_iva_account_id" />
                                </div>
                                <div class="row mt16">
                                    <label string="IVA Tag" for="l10n_ec_withhold_sale_iva_tag_id" class="col-lg-3 o_light_label"/>
                                    <field name="l10n_ec_withhold_sale_iva_tag_id" />
                                </div>
                                <div class="row mt16">
                                    <label string="Rent Account" for="l10n_ec_withhold_sale_rent_account_id" class="col-lg-3 o_light_label"/>
                                    <field name="l10n_ec_withhold_sale_rent_account_id" />
                                </div>
                                <div class="row mt16">
                                    <label string="Journal" for="l10n_ec_withhold_journal_id" class="col-lg-3 o_light_label"/>
                                    <field name="l10n_ec_withhold_journal_id" />
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_sri_account_config" model="ir.actions.act_window">
            <field name="name">Configuraciones SRI</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_sri_config_settings" />
            <field name="target">inline</field>
            <field name="context">{'module' : 'l10n_ec_niif'}</field>
        </record>

        <menuitem id="menu_account_config" name="Configuraciones SRI"
                  parent="sri_config_menu" sequence="1" action="action_sri_account_config"
                  groups="base.group_system" />


    </data>
</odoo>
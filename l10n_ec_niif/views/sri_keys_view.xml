<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record model="ir.ui.view" id="sri_keys_tree_view">
			<field name="name">sri.keys.tree</field>
			<field name="model">sri.keys</field>
			<field name="arch" type="xml">
				<tree string="Claves SRI">
					<field name="number" />
					<field name="key_type" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="sri_keys_form_view">
			<field name="name">sri.keys.form</field>
			<field name="model">sri.keys</field>
			<field name="arch" type="xml">
				<form string="Clave SRI">
					<group col="4" colspan="2">
						<field name="number" colspan="4" />
						<field name="key_type" />
						<field name="state" />
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="sri_keys_search_view">
			<field name="name">sri.keys.form</field>
			<field name="model">sri.keys</field>
			<field name="arch" type="xml">
				<search string="Clave SRI">
					<field name="number" />
					<field name="key_type" required="1" />
					<field name="state" />
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_sri_keys_tree_view">
			<field name="name">Claves SRI</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sri.keys</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="sri_keys_tree_view" />
			<field name="search_view_id" ref="sri_keys_search_view" />
		</record>

		<menuitem id="sri_keys_menu" name="Claves SRI" sequence="10"
			parent="sri_documentos_eletronicos_menu" action="action_sri_keys_tree_view" />

		<record model="ir.ui.view" id="sri_key_type_form_view">
			<field name="name">sri.key.type.form</field>
			<field name="model">sri.key.type</field>
			<field name="arch" type="xml">
				<form string="Tipo de Llave">
					<sheet>
						<group>
							<field name="name" />
							<field name="key_type" />
							<field name="path" />
							<field name="expiration_date" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>